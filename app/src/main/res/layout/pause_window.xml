<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="430dp"
        android:layout_height="862dp"
        android:background="#2A000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="382dp"
            android:layout_height="482dp"
            android:background="@drawable/your_rounded_shape"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.widget.Button
                android:id="@+id/resumeButton"
                android:layout_width="327dp"
                android:layout_height="93dp"
                android:background="@drawable/button_start_menu"
                android:fontFamily="@font/africavibes"
                android:onClick="openLevelSelection"
                android:text="Resume"
                android:textColor="#c4a8ff"
                android:textSize="30pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.138"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_conversion_absoluteHeight="41dp"
                tools:layout_conversion_absoluteWidth="276dp" />

            <android.widget.Button
                android:id="@+id/restartButton"
                android:layout_width="327dp"
                android:layout_height="93dp"
                android:background="@drawable/button_start_menu"
                android:fontFamily="@font/africavibes"
                android:onClick="openLevelSelection"
                android:text="Restart"
                android:textColor="#c4a8ff"
                android:textSize="30pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.501"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_conversion_absoluteHeight="41dp"
                tools:layout_conversion_absoluteWidth="276dp" />

            <android.widget.Button
                android:id="@+id/stopGameButton"
                android:layout_width="327dp"
                android:layout_height="93dp"
                android:background="@drawable/button_start_menu"
                android:fontFamily="@font/africavibes"
                android:onClick="openLevelSelection"
                android:text="Quit"
                android:textColor="#c4a8ff"
                android:textSize="30pt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.856"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_conversion_absoluteHeight="41dp"
                tools:layout_conversion_absoluteWidth="276dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>